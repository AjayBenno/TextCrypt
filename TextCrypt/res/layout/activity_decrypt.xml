<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:paddingTop="10dp"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="If your encrypted message has numbers make sure to go to the settings and select sinusodal encryption. If it has random characters then toggle it off." />

        <EditText
            android:id="@+id/enterDecrypt"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="38dp"
            android:padding="10dp" >

            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/decryptNow"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:onClick="decryptn"
            android:padding="10dp"
            android:src="@drawable/decrypt1"
            android:text="Decrypt!" />

        <TextView
            android:id="@+id/showDecryption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="47dp"
            android:gravity="center"
            android:textSize="48dp" />
    </LinearLayout>

</ScrollView>